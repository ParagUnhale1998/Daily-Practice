<%- include("header") -%>
<body>
    <h1 class="heading">ToDo List</h1>
    <div class="container">
        <h1>
            <%= listName %>
        </h1>

        <ul>
            <!-- <li>buy food</li>
        <li>cook food</li>
        <li>ear food</li> -->

        
            <% newListItems.forEach(items=> { %>
                <li>
                    <!-- // we can pass throught action using ejs name and action is very imp -->
                    <form action="/<%= listName %>/delete" method="post"><div class="item">
                    <input type="checkbox" name="checkbox" value="<%=items.id%>" onchange="this.form.submit()" >
                    <p><%=items.name%></p>
                </div>
            </form>
            </li>
                <% }); %>

        </ul>
        <!-- name and action method is very imp -->
        <form action="/" method="post" class="">
            <input class="newItem" type="text" name="newItem" placeholder="Enter Task!">
            <!-- value for pass the route name like home , work , today -->
            <button type="submit" name="list" value="<%= listName%>">Add Task</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
</body>

</html>